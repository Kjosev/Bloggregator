@using Bloggregator.Admin.Models
@model LoginViewModel
@{
    Layout = null;
}
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlogBuddy | Home</title>

    <!-- favicon -->
    <link rel="icon" href="/images/favicon.ico">


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="admin-body">
    <div class="container">

        <div class="row">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
                <section id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
            {
                        @Html.AntiForgeryToken()

                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div class="col-xs-12 admin-logo">
                                    <img class="img-responsive center-block" src="/images/admin_logo.png" alt="BlogBuddy Administration">
                                </div>
                                <div class="col-xs-12">
                                    <div class="input-group">
                                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-user admin-glyp"></span></span>
                                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-xs-12 admin-margin">
                                    <div class="input-group">
                                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock admin-glyp"></span></span>
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-xs-12 admin-btn">
                                    <button type="submit" class="btn btn-default btn-block form-control"> Log In </button>
                                </div>
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>

</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
</html>
