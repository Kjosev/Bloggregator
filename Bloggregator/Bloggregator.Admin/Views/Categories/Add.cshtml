@model Bloggregator.AppServices.Features.Admin.Category.Add.Request

@{
    ViewBag.Title = "Add New Category";
}

<!-- Add a new category -->
<div class="row">
    <div class="col-xs-12 col-xs-offset-0 col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title">Add a new category</div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="panel-body">
                    <div class="form-group-lg row">
                        <div class="col-xs-12">
                            @Html.ValidationMessageFor(m => m.Name)
                            @Html.TextBoxFor(m => m.Name, new {@class = "form-control", placeholder = "Category"})
                        </div>
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-default btn-block form-control"> Add </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
