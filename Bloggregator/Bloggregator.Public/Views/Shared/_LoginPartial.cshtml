@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><b>@User.Identity.GetUserName()<span class="caret"></span></b></a>
                <ul class="dropdown-menu">
                    <li><a href="@Url.Action("Manage", "Account")"><b><span class="glyphicon glyphicon-user"></span>&emsp;Account</b></a></li>
                    <li><a href="@Url.Action("Index", "Article")"><b><span class="glyphicon glyphicon-star"></span>&emsp;Favorites</b></a></li>
                    <li><a href="@Url.Action("Index", "Manage")"><b><span class="glyphicon glyphicon-cog"></span>&emsp;Manage</b></a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()"><b><span class="glyphicon glyphicon-off"></span>&emsp;Log Out</b></a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="@Url.Action("Login","Account")"><b>Log In</b></a></li>
        <li><a href="@Url.Action("Register","Account")"><b>Register</b></a></li>
    </ul>
}